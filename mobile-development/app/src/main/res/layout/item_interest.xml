<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/backgroundColor"
    android:layout_margin="8dp">

    <View
        android:id="@+id/viewInterest"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:background="@drawable/rounded_corners_interest"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/icInterest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:src="@drawable/ic_fastfood"
        app:layout_constraintBottom_toBottomOf="@+id/viewInterest"
        app:layout_constraintEnd_toEndOf="@+id/viewInterest"
        app:layout_constraintStart_toStartOf="@+id/viewInterest"
        app:layout_constraintTop_toTopOf="@+id/viewInterest"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tvInterest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/app_name"
        app:layout_constraintBottom_toBottomOf="@+id/viewInterest"
        app:layout_constraintEnd_toEndOf="@+id/viewInterest"
        app:layout_constraintStart_toStartOf="@+id/viewInterest"
        app:layout_constraintTop_toTopOf="@+id/viewInterest" />

</androidx.constraintlayout.widget.ConstraintLayout>